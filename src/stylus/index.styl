a
  text-decoration none !important
  box-shadow none

.Header
  margin-bottom 3em
  h1
    display flex
    align-items center
    font-size 30px
    margin-top 0px
    margin-bottom 10px
    text-decoration none
  img
    margin-right 10px
    margin-bottom 0px
    width 1em
    height 1em
    border-radius 100px
  span
    margin-right 60px
.Layout
  margin-left auto
  margin-right auto
  max-width 42rem
  padding 2.625rem 1.3125rem
  h2
    padding 0
    margin .2em 0
  hr
    margin-bottom 15px
  ul
    display flex
    flex-wrap wrap
    justify-content space-between
    list-style none
    padding 0
.blogpost
  &-home
    margin 0 0 40px 0
    h3
      margin 10px 0
    a
      box-shadow none
  &-comments
    padding 20px 0
  &-content
    display flex
    justify-content space-between
    align-items center
    &-img
      img
        width 60px
        height 60px
        object-fit cover
        border-radius 10px
        margin 0
  &-tag
    color white
    background #3778ff
    border 1px solid #3778ff
    margin-right 5px
    position relative
    color #fff
    border-radius 20px
    padding 0 8px
    font-size 11px
    font-weight 200
    height 20px
    line-height 19px
    font-weight 200
  &-info
    display flex
    align-items center
    margin-bottom 12px
  &-profile
    display flex
    align-items center
    font-size 13px
    img
      margin-right 4px
      margin-bottom 0
      width 20px
      height 20px
      border-radius 100px
.blogEditor
  &-content
    padding 4em
.bio
  display flex
  justify-content space-between
  align-items center
  img
    width 3.5em
    height 3.5em
    margin-right 10px
    border-radius 100px
    margin-bottom 0px
  p
    width 50%
  &-content
    display flex
    align-items center
    h6
      margin 0
      padding 0
      font-size 14px
    span
      font-size 12px
      width 80%
      line-height 0
  &-share
    button
      background linear-gradient(to left, #3b5999 0%, #3b5999 50%, #4e69a3 100%)
      box-shadow 0 1px 1px 0 #355089
      outline none
      font-size 12px
      padding .5em 12px
      background-color #d3d3d3
      border none
      border-radius 3px
      box-sizing border-box
      color #fff
      cursor pointer
      display inline-block
      font-size 12px
      text-decoration none
      user-select none
      transition 0.2s
      vertical-align middle
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      appearance none
      outline 0
footer
  display flex
  justify-content space-between
  span
    font-size 12px
    &:first-of-type
      font-style italic

pre
  border-radius: 0.3em;
  padding: 1em !important;
  overflow: auto;
  background-color: #292d3e;
  display: block;
  margin-right: -1em;
  margin-left: -1em;
  border-left: 0.35em solid #f07178

code[class*="language-"],
pre[class*="language-"] {
	color: #eceef0;
  font-weight 200 !important;
  font-size .9em
	background: none;
	text-shadow: 0 1px rgba(0, 0, 0, 0.3);
	text-align: left;
	white-space: pre;
	word-spacing: normal;
	word-break: normal;
	word-wrap: normal;
	line-height: 1.5;
	hyphens: none;
}